WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:



<MainWindow>:
    name: "main"
    userId: userId
    zipC: zipC
    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: "userId: "
            TextInput:
                id: userId
                multiline: False
            Label:
                text: "Zip Code: "
            TextInput:
                id: zipC
                multiline:False
        Button:
            text: "Submit"
            on_release: app.root.current = "second"

<SecondWindow>:
    name: "second"
    Button:
        text: "Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
<ThirdWindow>:
    name: "second"
    Button:
        text: "Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"